<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.New" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.New" parent="Base.Theme.New" />

    <style name="Theme.YourApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set status bar color -->
        <item name="android:statusBarColor">@android:color/black</item>

        <!-- Make status bar icons light (for dark background) -->
        <item name="android:windowLightStatusBar">false</item>


    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Text color when typing -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Topbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


</resources>