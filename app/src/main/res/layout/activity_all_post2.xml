<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".All_Post"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    >

    <ImageView
        android:id="@+id/backGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/allpost"
        android:src="@drawable/back"
        app:tint="@color/white"/>

    <TextView
        android:id="@+id/allpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Posts"
        android:textSize="20sp"
        android:textColor="#0174DE"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/backGo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <GridView
        android:id="@+id/postsGridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:numColumns="3"
        android:verticalSpacing="4dp"
        android:horizontalSpacing="4dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:scrollbars="vertical"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="false"
        android:smoothScrollbar="true"
        android:clipToPadding="false"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/allpost" />

</androidx.constraintlayout.widget.ConstraintLayout>